<section id="list-movies">
    <h1>Ironhack Cinema</h1>
    <h2>Click on the movie to check the showtimes!</h2>
    <div class="card-deck">
        {{#each movies}}
        <div class="card">
            <img src="{{image}}" alt="{{title}}">
            <h3>{{title}}</h3>
            <a href="/movies/{{_id}}">See more</a>
        </div>
        {{/each}}
    </div>
</section>